html
  head
    title Facebook app
    meta(name="viewport", content="user-scalable=no,initial-scale=1,maximum-scale=1,minimum-scale=1,width=device-width")
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
  body
    div.container
      h1.display-4.text-primary Facebook
      div#login
        div.row.container
          div.col-xs-8
            label.h5(for="userName") Usuario
            input.form-control#userName(placeholder="Ingresa tu usuario")
            label.mt-1.h5(for="password") Contraseña
            input.form-control#password(type="password", placeholder="Ingresa tu contraseña")
            button.btn.btn-primary.mt-1#do-login Ingresar
      div#wall
        div#new-state
          textarea#state-text(placeholder="Escribe algo para compartir")
          button#send-state Enviar        
        div#states
    script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.1/socket.io.js")
    script(src="./js/main.js")

